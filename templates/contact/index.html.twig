{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello Charles! ✅</h1>
    {% if contacts is defined %}
        <ul>
            {% for contact in contacts %}
                <li>
                    <a href="{{ path("contactId",{id:contact.id}) }}"> {{ contact.nom }} {{ contact.prenom }}</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if contact is defined %}
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Sujet</th>
                    <th>Message</th>
                    <th>Newsletter</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td> {{ contact.id }} </td>
                    <td> {{ contact.nom }} </td>
                    <td> {{ contact.prenom }} </td>
                    <td> {{ contact.email }} </td>
                    <td> {{ contact.sujet }} </td>
                    <td> {{ contact.message }} </td>
                    <td>
                        {% if contact.newsletter %}
                            Oui
                        {% else %}
                            Non
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
